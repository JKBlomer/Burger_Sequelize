<div id="container">

    <div id="header-section">
        <header>
            <img src="/images/cartoon-fast-food-chicken-burger.jpg" alt="image here" height="150" width="150">
            <h2 class="header">WELCOME TO EAT DA BURGER!</h2>
        </header>

    </div>
    <div id="burger-section">
        <div class="burger-list this-width">
            <h2  class="h2class">Burgers To Eat</h2>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li class="listItem" data-id="{{this.id}}">

                    <p class="pText" name="burger_name">{{this.burger_name}}</p>
                    <button class="delete-button" data-button-id="{{this.id}}" type="submit">Delete </button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>



        <div class="devoured-list  this-width">
            <h2 class="h2class">Burgers Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li class="dev-li">
                    <p>{{this.burger_name}}</p>
                    
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>


    <div id="input-section" >
        <h2>Add Your Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="bu">Burger Details:</label>
                <input type="text" id="burger-input" name="name">
            </div></br>
            <button id="submit-button" type="submit">Add Burger</button>
            <label for="bu">Add the burger you would like to eat</label>
        </form>
    </div>

</div>